{
  "name": "socket-file-transfer-web",
  "version": "1.0.0",
  "description": "Cross-computer file transfer using WebSockets with modern web interface",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
