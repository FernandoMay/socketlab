  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "fs-extra": "^11.1.1",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "socket.io",
    "file-transfer",
    "websocket",
    "node.js",
    "express"
  ],
  "author": "Socket Programming Lab 1",
